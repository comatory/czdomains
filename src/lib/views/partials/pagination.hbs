<form
  method="GET"
  action="{{ concat path '/' filter }}"
  autocomplete="off"
  name="pagination"
  class="pagination"
>
  {{#if previous}}
    <button
      type="submit"
      name="page"
      value="{{ prevPage }}"
      class="pagination__button pagination__button--previous"
    >
      Previous
    </button>
  {{ else }}
    <button
      type="submit"
      disabled
      name="page"
      class="pagination__button pagination__button--previous"
    >
      Previous
    </button>
  {{/if}}

  <span class="pagination__current">
    Page {{ page }} of {{ totalPages }}
  </span>

  <input
    type="hidden"
    name="size"
    value="{{ size }}"
  />

  {{#if next}}
    <button
      type="submit"
      name="page"
      value="{{ nextPage }}"
      class="pagination__button pagination__button--next"
    >
      Next
    </button>
  {{ else }}
    <button
      type="submit"
      name="page"
      disabled
      class="pagination__button pagination__button--next"
    >
      Next
    </button>
  {{/if}}
</form>
